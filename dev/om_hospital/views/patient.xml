<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">Patient</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="1"> 
                        <field name="doctor_name"/>
                        <field name="doctor_age"/>
                        <field name="doctor_degree"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dental_doctor_tree_view" model="ir.ui.view">
        <field name="name">Patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree >
                <field name="doctor_name"/>
                <field name="doctor_age"/>
                <field name="doctor_degree"/>
            </tree>
        </field>
    </record>

    <record id="action_dental_doctor" model="ir.actions.act_window">
        <field name="name">Өвчтөн бүртгэл </field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>